<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Lombok -->
    <suppress message="^Annotation 'Getter' should be alone on line.$"/>
    <suppress message="^Annotation 'Setter' should be alone on line.$"/>

    <!-- Tests -->
    <suppress checks="MagicNumberCheck" files="^.*Test.java$"/>
    <suppress checks="MissingCtorCheck" files="^.*Test.java$"/>
</suppressions>